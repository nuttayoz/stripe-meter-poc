{
  "name": "stripe-meter-poc",
  "private": true,
  "workspaces": [
    "application/*",
    "backend/*"
  ],
  "scripts": {
    "dev:web": "bun run --filter './application/web' dev",
    "dev:api": "bun run --filter './backend/api' dev",
    "dev": "bun run --workspaces --parallel dev",
    "build:web": "bun run --filter './application/web' build",
    "build:api": "bun run --filter './backend/api' build",
    "build": "bun run --workspaces build",
    "infra:up": "docker compose -f devtool/docker-compose.yml up -d",
    "infra:down": "docker compose -f devtool/docker-compose.yml down",
    "infra:logs": "docker compose -f devtool/docker-compose.yml logs -f",
    "lint:web": "bun run --filter './application/web' lint",
    "lint:api": "bun run --filter './backend/api' lint",
    "lint": "bun run --workspaces lint",
    "test:api": "bun run --filter './backend/api' test",
    "test": "bun run test:api"
  }
}
